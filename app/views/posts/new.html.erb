<div class="posts-contents">
  <header class="posts-header">
    <%#= link_to image_tag('furima-logo-color.png' , size: '185x50'), "/" %>
  <header>
  <div class="posts-main">
    <h2 class="posts-title">画像の情報を入力</h2>
    <%= form_with model: @post, local: true do |f| %>

    <%#= render 'shared/error/messages', model: f.object %>

    <div class="img-upload">
      <div class="weight-bold-text">
        資料画像
        <span class="indispensable">必須</span>
      </div>
      <div class="click-upload">
        <p>
           クリックしてファイルをアップロード
        </p>
        <%= f.file_field :image, id:"post-image" %>
      </div>
    </div>

    <div class="new-posts">
      <div class="weight-bold-text">
        タイトル
        <span class="indispensable">必須</span>
      </div>
      <%= f.text_area :title, class:"posts-text", id:"post-title", placeholder:"タイトル（必須 40文字まで)", maxlength:"40" %>
      <div class="posts-explain">
        <div class="weight-bold-text">
          画像の説明
          <span class="indispensable">必須</span>
        </div>
        <%= f.text_area :description, class:"posts-text", id:"post-info", placeholder:"画像の説明（必須 1,000文字まで）（資料画像など）例）講座で使用した資料です。" ,rows:"7" ,maxlength:"1000" %>
      </div>
    </div>

    <div class="posts-detail">
      <div class="weight-bold-text">画像の詳細</div>
      <div class="form">
        <div class="weight-bold-text">
          日付
          <span class="indispensable">必須</span>
        </div>
        <%= f.date_field :date, class:"posts-date", id:"post-date", placeholder:"20001010" %>
        <div class="weight-bold-text">
          クラブ名/講座名
          <span class="indispensable">必須</span>
        </div>
         <%= f.collection_select(:club_id, Club.all, :id, :name, {}, {class:"select-box", id:"post-club"}) %>
      </div>
    </div>
    <div class="post-btn-contents">
      <%= f.submit "投稿する", class:"post-btn" %>
      <%= link_to 'もどる', root_path, class:"back-btn" %>
    </div>
  </div>
  <% end %>

  <footer class="posts-footer">
    <ul class="menu">
      <li><%= link_to "HOME", root_path %></li>
      <li></li>
      <li></li>
    </ul>
    <p class="inc">
      ©︎〇〇町民センター
    </p>
  </footer>
</div>
