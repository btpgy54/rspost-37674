<div class="images-post-contents">
  <header class="images-post-header">
    <%#= link_to image_tag('furima-logo-color.png' , size: '185x50'), "/" %>

  </header>
  <div class="images-post-main">
    <h2 class="images-post-title">画像の情報を入力</h2>
    <%= form_with model: @post, local: true do |f| %>

    <%#= render 'shared/error_messages', model: f.object %>

    <div class="img-upload">
      <div class="weight-bold-text">
        資料画像
        <span class="indispensable">必須</span>
      </div>
      <div class="click-upload">
        <p>
          クリックしてファイルをアップロード
        </p>
        <%= f.file_field :image, id:"image" %>
      </div>
    </div>

    <div class="new-items">
      <div class="weight-bold-text">
        タイトル
        <span class="indispensable">必須</span>
      </div>
      <%= f.text_area :title, class:"posts-text", id:"post-title", placeholder:"タイトル（必須 40文字まで)", maxlength:"40" %>
      <div class="items-explain">
        <div class="weight-bold-text">
          画像の説明
          <span class="indispensable">必須</span>
        </div>
        <%= f.text_area :description, class:"posts-text", id:"post-info", placeholder:"投稿画像の説明（必須 1,000文字まで）（資料など）例）講座で使用した資料です。" ,rows:"7" ,maxlength:"1000" %>
      </div>
    </div>

    <div class="posts-detail">
      <div class="weight-bold-text">画像の詳細</div>
      <div class="form">
        <div class="weight-bold-text">
          日時
          <span class="indispensable">必須</span>
        </div>
        <%= f.text_field :date, class:"date-input", id:"post-date", placeholder:"例）20001010" %>
        <div class="weight-bold-text">
          クラブ名
          <span class="indispensable">必須</span>
        </div>
        <%= f.collection_select(:club_id, Club.all, :id, :name, {}, {class:"select-box", id:"club-select"}) %>
        <div class="weight-bold-text">
          投稿者名
          <span class="indispensable">任意</span>
        </div>
        <%#= f.collection_select(:user_id, User.all, :id, :name, {}, {class:"select-box", id:"post-user"}) %>
      </div>
    </div>

    <div class="sell-btn-contents">
      <%= f.submit "投稿する", class:"post-btn" %>
      <%=link_to 'もどる', root_path, class:"back-btn" %>
    </div>
  </div>
  <% end %>

  <footer class="posts-footer">
    <ul class="menu">
      <li><%= link_to "HOME", root_path %></li>
      <li><%= link_to "クラブ/講座", "#"%></li>
      <li><%= link_to "予約", "#"%></li>
    </ul>
    <%#= link_to image_tag('furima-logo-color.png' , size: '185x50'), "/" %>
    <p class="inc">
      ©︎〇〇町役場
    </p>
  </footer>
</div>